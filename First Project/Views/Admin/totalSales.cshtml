@model IEnumerable<First_Project.Models.sales>
@{
    ViewData["Title"] = "totalSales";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<table class="table" id="T">
    <thead>
        <tr>
            <th>Customer Name </th>
            <th>Product Name </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.store.Name</td>
                <td>@item.order.Amount</td>
            </tr>
        }
    </tbody>
</table>


