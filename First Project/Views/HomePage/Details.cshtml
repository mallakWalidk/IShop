@model First_Project.Models.Home

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Home</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstDescreption)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstDescreption)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SecondDescreption)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondDescreption)
        </dd>
        <dt class = "col-sm-2">
            First Image
        </dt>
        <dd class = "col-sm-10">
                     <img src=@Url.Content("~/Image/" + Model.FirstImgPath) 
asp-append-version ="true" style="border-radius:20%;" width="100" height="100" />

        </dd>
        <dt class = "col-sm-2">
            Second Image
        </dt>
        <dd class = "col-sm-10">
                     <img src=@Url.Content("~/Image/" + Model.SecondImgPath) 
asp-append-version ="true" style="border-radius:20%;" width="100" height="100" />

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
</div>
