@model IEnumerable<First_Project.Models.Home>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstDescreption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondDescreption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstImgPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondImgPath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstDescreption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondDescreption)
            </td>
            <td>                <img src=@Url.Content("~/Image/" + item.FirstImgPath) 
asp-append-version ="true" style="border-radius:20%;" width="100" height="100" />

            </td>
            <td>
                            <td>      <img src=@Url.Content("~/Image/" + item.SecondImgPath) 
asp-append-version ="true" style="border-radius:20%;" width="100" height="100" />

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
